<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ewellshop">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".EwellShop"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Personal"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".NewBusiness"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".Pin"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".Chooser" />
        <activity
            android:name=".Email"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".Starter"
            android:launchMode="singleTask" />
        <activity android:name=".ItemsLookup" />
        <activity
            android:name=".Item"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".OrderDetails" />
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>