<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_close_24"
        android:id="@+id/cancelIV"
        android:layout_gravity="end"/>
    <ImageView
        style="@style/Image.Product"
        android:src="@drawable/product"
        android:id="@+id/imageIV"/>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        style="@style/View.Tag.Default">
        <TextView
            style="@style/Font.Tag"
            android:text="NEW"
            android:id="@+id/tagTV"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/nameTV"
        android:text="Nestle Milo Can Regular"
        android:textColor="?android:textColorPrimary"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="12.5dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="7.5dp"
            android:src="@drawable/ic_price_tag"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Font.bold"
            android:textSize="20sp"
            android:id="@+id/priceTV"
            android:textColor="@color/black"
            android:text="2094 JMD"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:id="@+id/conditionB"
            style="@style/Font.Button"
            android:text="Out of Stock"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:id="@+id/editB"
            style="@style/Font.Button.Default"
            android:text="Edit Item"/>
    </LinearLayout>
</LinearLayout>