<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:orientation="vertical"
    tools:context=".Orders">
    <LinearLayout
        style="@style/Layout.Linear.Header">
        <TextView
            android:text="Orders"
            style="@style/Font.Title.Main" />
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:id="@+id/fulfilB"
            style="@style/Font.Button.Default"
            android:text="Fulfill an Order"/>
    </LinearLayout>
    <ListView
        style="@style/List.Default"
        android:id="@+id/ordersLV"/>
</LinearLayout>